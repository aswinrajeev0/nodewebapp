<%- include('../partials/user/header') %>

<style>
    .page-confirmation {
        min-height: calc(100vh - 200px);
        display: flex;
        align-items: center;
        padding: 40px 0;
        background-color: #f8f9fa;
    }

    .confirmation-card {
        background: white;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        max-width: 800px;
        margin: 0 auto;
    }

    .success-icon {
        width: 80px;
        height: 80px;
        margin-bottom: 25px;
        animation: bounce 1s ease-in-out;
    }

    .order-number {
        color: #28a745;
        font-weight: 600;
        font-size: 1.2em;
    }

    .confirmation-title {
        color: #333;
        font-size: 2.2em;
        margin-bottom: 20px;
        font-weight: 700;
    }

    .confirmation-message {
        color: #666;
        font-size: 1.1em;
        line-height: 1.6;
        margin-bottom: 30px;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
    }

    .action-button {
        padding: 12px 30px;
        border-radius: 5px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        min-width: 180px;
    }

    .btn-home {
        background-color: #28a745;
        color: white;
        border: 2px solid #28a745;
    }

    .btn-home:hover {
        background-color: #218838;
        border-color: #218838;
        color: white;
    }

    .btn-orders {
        background-color: white;
        color: #28a745;
        border: 2px solid #28a745;
    }

    .btn-orders:hover {
        background-color: #f8f9fa;
        color: #218838;
        border-color: #218838;
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-20px);
        }
        60% {
            transform: translateY(-10px);
        }
    }

    @media (max-width: 768px) {
        .confirmation-card {
            padding: 30px 20px;
            margin: 0 15px;
        }

        .action-buttons {
            flex-direction: column;
            gap: 10px;
        }

        .action-button {
            width: 100%;
        }

        .confirmation-title {
            font-size: 1.8em;
        }

        .confirmation-message {
            font-size: 1em;
        }
    }
</style>

<main class="main page-confirmation">
    <div class="container">
        <div class="confirmation-card">
            <div class="text-center">
                <img src="evara-frontend/assets/imgs/theme/success.png" alt="Success" class="success-icon">
                
                <h1 class="confirmation-title">Order Confirmed!</h1>
                
                <p class="confirmation-message">
                    Thank you for your order! <br>
                    Your order number is <span class="order-number">#12345</span><br>
                    You will receive an email confirmation shortly.
                </p>

                <div class="action-buttons">
                    <a href="/" class="action-button btn-home">Back To Home</a>
                    <a href="/orders" class="action-button btn-orders">View Orders</a>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/user/footer') %>