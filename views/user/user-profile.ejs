        <script>
            document.getElementById("myForm").addEventListener("submit", function (event) {
                // Reset errors
                document.getElementById("nameErr").textContent = "";
                document.getElementById("phoneErr").textContent = "";

                // Flag for valid form
                let isValid = true;

                // Validate Display Name
                const dname = document.getElementById("dname").value.trim();
                if (dname.length < 3) {
                    document.getElementById("nameErr").textContent = "Display Name must be at least 3 characters long.";
                    isValid = false;
                }

                // Validate Phone
                const phone = document.getElementById("phone").value.trim();
                const phonePattern = /^[0-9]{10}$/;
                if (!phonePattern.test(phone)) {
                    document.getElementById("phoneErr").textContent = "Phone number must be exactly 10 digits.";
                    isValid = false;
                }

                // If form is invalid, prevent submission
                if (!isValid) {
                    event.preventDefault();
                }
            });
        </script>